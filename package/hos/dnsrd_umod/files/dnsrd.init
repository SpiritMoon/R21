#!/bin/sh /etc/rc.common

START=98

USE_PROCD=1
PROG=/sbin/dnsrd

start_service()
{
        echo 0 > /sys/kdnsrd_control/kdnsrd_disable
        procd_open_instance
        procd_set_param command "$PROG"
        procd_set_param respawn
        procd_close_instance
}

stop_service()
{
        echo 1 > /sys/kdnsrd_control/kdnsrd_disable
}
